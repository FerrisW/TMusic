.container{
  margin: 50rpx 0;
  display: flex;
  flex-direction: column;
}

.input-class{
  margin: 10rpx 20rpx;
  padding:20rpx 10rpx;
  border-bottom: 2rpx solid red;
  display: flex;
  flex-direction: row;
  height: 50rpx;
}

.input-text{
  font-size: 30rpx;
  font-weight: bold;
  width: 150rpx;
  text-align: center;
  line-height: 50rpx;
}

.input-placeholder{
  font-size: 28rpx;
  color: rgb(207, 204, 204);
}

.button-login{
  margin: 50rpx 20rpx;
  background-color: rgb(228, 65, 65);
  color: white;
}

.nologin{
  text-align: center;
  text-decoration: underline;
  font-size: 26rpx;
}