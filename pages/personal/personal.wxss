@import '../single-song/single-song-template.wxss';
.bg-img {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  z-index: -1;
  filter: blur(30px);
}

.profile {
  height: 150rpx;
  padding: 20rpx 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.profile-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.profile-name {
  padding-left: 20rpx;
  color: #fff;
  flex: 1;
}

.profile-total {
  color: #fff;
  position: relative;
}

.hr {
  height: 1px;
  background-color: rgb(105, 105, 105);
  margin: 0 30rpx;
}

.favorite {
  padding: 10rpx 30rpx;
  margin: 5rpx 30rpx;
  border: 1px solid rgb(173, 171, 171);
  border-radius: 10rpx;
  align-items: center;
  height: 50rpx;
}

.favorite-title {
  font-size: 28rpx;
  color: rgb(255, 255, 255);
}

.song-lists {
  display: flex;
  flex-direction: column;
  margin: 20rpx 50rpx;
}


